# Database
DATABASE_URL="postgresql://user:password@localhost:5432/todolist?schema=public"

# JWT Secrets (use strings longas e aleatórias em produção)
JWT_ACCESS_SECRET=seu_secret_super_seguro_para_access_token_aqui_min_32_chars
JWT_REFRESH_SECRET=outro_secret_diferente_para_refresh_token_aqui_min_32_chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OAuth Google
GOOGLE_CLIENT_ID=seu_google_client_id
GOOGLE_CLIENT_SECRET=seu_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:4000/api/auth/google/callback

# OAuth GitHub
GITHUB_CLIENT_ID=seu_github_client_id
GITHUB_CLIENT_SECRET=seu_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:4000/api/auth/github/callback

# Server
PORT=4000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# CORS
CORS_ORIGIN=http://localhost:3000